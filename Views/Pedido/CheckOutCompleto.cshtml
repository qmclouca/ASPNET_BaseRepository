@model Pedido

<div class="container">
    <div class="jumbotron">
        <h2>@ViewBag.CheckOutCompletoMensagem</h2>
    </div>
    <div class="card">
        <div class="card-body">
            <p>Cliente: <strong>@Model.Nome</strong></p>
            <p>Data do pedido: <strong>@Model.PedidoEnviado</strong></p>
            <p>Número do pedido: <strong>@Model.PedidoId</strong></p>

            <table class="table">
                <tr>
                    <th></th>
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th>Preço</th>
                </tr>
                @foreach (var item in Model.PedidosItens)
                {
                    <tr>
                        <td><img src="@item.Lanche.ImagemUrl" width="40" height="40" /></td>
                        <td>@item.Quantidade</td>
                        <td>@item.Lanche.Nome</td>
                        <td>@item.Lanche.Preco.ToString("C")</td>
                    </tr>
                }
            </table>

            <div class="row">
                <div class="col-md-12">
                    <h4>Total: <strong>@Model.PedidoTotal.ToString("C2")</strong></h4>
                </div>
            </div>
        </div>
        <div class="form-group" style="text-align: center">
            <h3>
                <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Retornar</a>
            </h3>
        </div>
    </div>
</div>
